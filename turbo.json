{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "compile": {
            "dependsOn": ["transitNode"],
            "outputs": ["artifacts/**", "cache/**", "./build/contracts/**"]
        },
        "cycles:check": {},
